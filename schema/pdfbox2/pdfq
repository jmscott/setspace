#!/bin/bash
#
#  Synopsis:
#	Engligh fulltext, phrase or keyword query of tables in pdfbox2 schema.
#  Usage:
#	# default limit is 10 and offset is 0
#	pdfq <type>:'query' [limit [offset]]
#
#	pdfq fts:'(suffix | spanning) <-> tree'
#
#	pdfq phrase:'suffix tree ...' | more
#	pdfq p:'suffix tree ...' | more
#
#	pdfq keyword:'trump putin' 100
#	pdfq key:'trump putin' 100 200
#	pdfq k:'trump putin' 100
#	pdfq keywords:'trump putin' 100
#
#  Exit Status:
#	0	Matching count and tuples written to standard output
#	1	psql internal error (e.g., out of memory)
#	2	bad database connection
#	3	error in sql script with ON_ERROR_STOP set
#	4	incorrect command line argument
#  Environment:
#	PDFBOX2_ROOT
#	PostgreSQL PG* variables
#  See Also:
#	$PDFBOX2_ROOT/lib/page-text-utf8-fts.sql
#	$PDFBOX2_ROOT/lib/page-text-utf8-phrase.sql
#	$PDFBOX2_ROOT/lib/page-text-utf8-keyword.sql
#
PROG=pdfq
LIMIT=10
OFFSET=0
SQL_FILE=
RANK_NORM=14
Q_VAR=
TS_CONF=english

die()
{
	echo "$PROG: ERROR: $1" >&2
	exit $2
}

arg_is_number()
{
	case "$2" in
	[0-9]*)
		;;
	*)
		die "$1 is not a number: $2"
		;;
	esac
}

test -n "$PDFBOX2_ROOT" || die 'environment not defined: PDFBOX2_ROOT'

case $# in
1)
	;;
2)
	arg_is_number limit "$2" || exit 4
	LIMIT=$2
	;;
3)
	arg_is_number limit "$2" || exit 4
	LIMIT=$2

	arg_is_number offset "$2" || exit 4
	OFFSET=$3
	;;
*)
	die 'wrong number of command line arguments' 4
	;;
esac

#  basic checking ot

case "$1" in
*:*)
	Q="$1"
	;;
*)
	die "query prefix missing: expected {fts,keyword,phrase}:" 4
	;;
esac

#  parse the query prefix and words from $1

case "$Q" in

keyword:*|keywords:*|key:*|k:*)
	Q=$(echo "$Q" | sed 's/^k[^:]*://')
	Q_VAR=keyword
	SQL_FILE=page-text-utf8-keyword.sql
	;;

phrase:*|p:*)
	Q=$(echo "$Q" | sed 's/^p[^:]*://')
	Q_VAR=phrase
	SQL_FILE=page-text-utf8-phrase.sql
	;;
fts:*)
	Q=$(echo "$Q" | sed 's/^fts[^:]*://')
	Q_VAR=ts_query
	SQL_FILE=page-text-utf8-fts.sql
	;;

:*)
	die 'no query type before colon' 4
	;;
*)
	die "unknown query type: $(echo "$Q" | sed 's/:.*//')"
	;;
esac

psql	--quiet								\
	--no-psqlrc 							\
	--file $PDFBOX2_ROOT/lib/$SQL_FILE				\
	--set ts_conf="'$TS_CONF'"					\
	--set $Q_VAR="'$Q'"						\
	--set limit="$LIMIT" 						\
	--set offset="$OFFSET" 						\
	--set rank_norm=$RANK_NORM					||
		die "psql failed: exit status=$?" $?
