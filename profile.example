#
#  Synopsis:
#	Profile for typical setspace server
#  Usage:
#	. $SETSPACE_ROOT/etc/profile
#  Blame:
#  	jmscott@setspace.com
#  	setspace@gmail.com
#
export SETSPACE_ROOT=${SETSPACE_ROOT:=/usr/local/setspace}

export BLOBIO_ROOT=${BLOBIO_ROOT:=/usr/local/blobio}

export BLOBIO_SERVICE=${BLOBIO_SERVICE:=bio4:localhost:1797}

#  set readonly service to $BLOBIO_ROOT if not set

if [ -x $BLOBIO_ROOT/data ];  then
	BLOBIO_RO_SERVICE=${BLOBIO_RO_SERVICE:=rofs:$BLOBIO_ROOT}
else
	BLOBIO_RO_SERVICE=$BLOBIO_SERVICE
fi
export BLOBIO_RO_SERVICE

export BLOBIO_ALGORITHM=${BLOBIO_ALGORITHM:=sha}
export PATH=$PATH:$BLOBIO_ROOT/bin

#  PostgreSQL database

export PGHOST=/tmp
export PGPORT=5432
export PGUSER=postgres
export PGDATABASE=setspace
unset PGSYSCONFDIR

PATH=$SETSPACE_ROOT/bin:$SETSPACE_ROOT/sbin:$BLOBIO_ROOT/bin:/usr/local/bin:/usr/bin:/bin:$PATH

export TMPDIR=$SETSPACE_ROOT/tmp
mkdir -p $TMPDIR || exit 1
