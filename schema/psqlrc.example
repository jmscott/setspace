/*
 *  Synopsis:
 *	Reasonable PostgreSQL psqlrc file that inclues all schemas in search path
 *  Note:
 *	Eventually will be autogenerated based schemas defined in schema.mk.
 */
set search_path to 
	drblob,
	expat2,
	jsonorg,
	libxml2,
	nistrand,
	pdfbox2,
	pgtexts,
	prefixio,
	setspace,
	udigset,
	public
;

set QUIET 1
\pset null 'Â¤'

-- Customize prompts
\set PROMPT1 '%[%033[1m%][%/] # '
\set PROMPT2 '... # '

-- Show how long each query takes to execute
\timing

-- Use best available output format
\x auto
\set VERBOSITY verbose
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTCONTROL ignoredups
\set COMP_KEYWORD_CASE upper
\unset QUIET

