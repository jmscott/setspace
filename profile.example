#
#  Synopsis:
#	Profile for typical setspace server
#  Usage:
#	. $SETSPACE_ROOT/etc/profile
#  Blame:
#  	jmscott@setspace.com
#  	setspace@gmail.com
#
export JMSCOTT_ROOT=/usr/local/jmscott
PATH=$JMSCOTT_ROOT/bin:/bin:/usr/bin

export SETSPACE_ROOT=/usr/local/setspace

export BLOBIO_ROOT=/usr/local/blobio
export BLOBIO_SERVICE=bio4:localhost:1797
export BLOBIO_GET_SERVICE=fs:$BLOBIO_ROOT
export BLOBIO_ALGORITHM=bc160
PATH=$PATH:BLOBIO_ROOT/bin

#  set postgresql variables

export PGHOME=/usr/local/pgsql
export PGDATA=$PGHOME/data
export PGHOST=/tmp
export PGPORT=5432
export PGUSER=postgres
export PGPASSWORD=
export PGDATABASE=setspace
PATH=$PATH:$PGHOME/bin

#  golang libpq gripes about PGSYSCONFDIR
unset PGSYSCONFDIR

#  on macos, always add gnu tools from mac ports
if "$(uname -s)" = Darwin;  then
	#  always add gnu tools in mac ports
	test -d /opt/local/bin && PATH=/opt/local/bin:$PATH
	test -d /opt/local/libexec/gnubin				&&
		PATH=/opt/local/libexec/gnubin:$PATH
fi

PATH=$SETSPACE_ROOT/bin:$SETSPACE_ROOT/sbin:$PATH
